<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="?colorPrimary">
        <shape>
            <solid android:color="#FFBFBFBF"/>
            <corners android:radius="2dp"/>
            <stroke android:width="1.5dip" android:color="?colorPrimary" />
        </shape>
    </item>

    <item android:state_enabled="false" android:color="?colorPrimary">
        <shape>
            <solid android:color="@null"/>
            <corners android:radius="2dp"/>
            <stroke android:width="1.5dip" android:color="?colorPrimary" />
        </shape>
    </item>

    <item android:color="?colorPrimary">
        <shape>
            <solid android:color="@null"/>
            <corners android:radius="2dp"/>
            <stroke android:width="1.5dip" android:color="?colorPrimary" />
        </shape>
    </item>

</selector>
